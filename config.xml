<?xml version='1.0' encoding='utf-8'?>
<widget id="com.adafruit.bno055example" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BNO055 BLE Example</name>
    <description>
      An example BNO055 + Bluetooth LE iOS app
    </description>
    <author email="todd@uniontownlabs.org" href="https://uniontownlabs.org">
      Todd Treece
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1.0.0" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="orientation" value="portrait" />
    <preference name="AutoHideSplashScreen" value="false" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
